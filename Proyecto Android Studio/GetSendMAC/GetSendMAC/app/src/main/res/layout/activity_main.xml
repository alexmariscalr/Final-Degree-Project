<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:backgroundTint="#DFD5D5"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prueba de captura y envío de MAC"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/getMAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robar dirección MAC"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#3F51B5"
        app:cornerRadius="15dp"
        app:strokeColor="#3F51B5"
        app:strokeWidth="1dp"
 />

    <TextView
        android:id="@+id/showMAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí aparecerá la dir. MAC del dispositivo"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"/>

    <Button
        android:id="@+id/sendMAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar dirección MAC"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#4CAF50"
        android:visibility="invisible"
        app:cornerRadius="15dp"
        app:strokeColor="#4CAF50"
        app:strokeWidth="1dp"

        />

    <TextView
        android:id="@+id/request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Enviando dirección MAC..."
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dato enviado"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="Activar ubicación"
        />
    <TextView
        android:id="@+id/miUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="Latitud: \n Longitud: \n País: \n Localidad: \Dirección: "/>




</RelativeLayout>